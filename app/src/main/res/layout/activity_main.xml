<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.campbell.simplecalc.MainActivity">

    <EditText
        android:id="@+id/num1"
        style="@style/CodeFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_hint"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="@color/colorBlue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/num2"
        style="@style/CodeFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_hint"
        android:textColorLink="@color/colorBlue"
        android:textSize="16sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addNums"
        android:text="@string/add"
        android:textColor="@color/colorBlue"
        android:textColorLink="@android:color/holo_blue_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="subtractNums"
        android:text="@string/subtract"
        android:textColor="@color/colorBlue"
        android:textSize="24sp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="divideNums"
        android:text="@string/divide"
        android:textColor="@color/colorBlue"
        android:textSize="24sp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="multiplyNums"
        android:text="@string/multiply"
        android:textColor="@color/colorBlue"
        android:textSize="24sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clearFields"
        android:text="@string/clear"
        android:textColor="@color/colorBlue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_hint"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />
</LinearLayout>
