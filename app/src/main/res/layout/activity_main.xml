<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kalel"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.campbell.simplecalc.MainActivity">

    <EditText
        style="@style/pepe"
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="@string/enter_hint" />
    <EditText
        style="@style/pepe"
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_hint" />
    <Button
        style="@style/pepe"
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009900"
        android:background="#2952a3"
        android:onClick="addNums"
        android:text="@string/add" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009900"
        android:background="#1f3d7a"
        android:onClick="subtractNums"
        android:text="Subtract" />

    <Button
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009900"
        android:background="#152951"
        android:onClick="divideNums"
        android:text="Divide" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009900"
        android:background="#0a1429"
        android:onClick="multiplyNums"
        android:text="Multiply" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The answer will be here" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorAccent"
        android:textColor="#009900"
        android:background="#000000"
        android:onClick="clearFields"
        android:text="Clear" />
</LinearLayout>
