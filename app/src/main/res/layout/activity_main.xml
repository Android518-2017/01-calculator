<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.campbell.simplecalc.MainActivity">

    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorAccent"
        android:hint="@string/enter_hint" />
    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_hint" />
    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addNums"
        android:text="@string/add"
        android:textColor="@android:color/holo_blue_bright"
        android:backgroundTint="@color/NewColourPurplr" />

    <Button style="@style/AppTheme_Button"
        android:id="@+id/subtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="subtractNums"
        android:text="@string/subtract"/>
        <!--android:textColor="@android:color/holo_red_dark"-->
        <!--android:backgroundTint="@color/colorPrimaryDark" />-->

    <Button
        android:id="@+id/multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="multiplyNums"
        android:text="@string/multiply"
        android:textColor="@color/NewColourPurplr"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="divideNums"
        android:text="@string/divide"
        android:textColor="@color/CalculatorGreen"
        android:backgroundTint="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:text="@string/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:onClick="clearFieldsBtn" />
</LinearLayout>
